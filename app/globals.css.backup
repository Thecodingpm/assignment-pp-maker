/* ===== KONVA CANVAS STYLES - CLEAN AND OPTIMIZED ===== */
/* Essential Konva styles to prevent glitches and ensure smooth operation */
.konvajs-content {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  image-rendering: -webkit-optimize-contrast;
  image-rendering: crisp-edges;
}

/* Remove any conflicting styles */
.konvajs-content canvas {
  display: block !important;
  touch-action: none !important;
  image-rendering: -webkit-optimize-contrast !important;
  image-rendering: crisp-edges !important;
  -webkit-user-select: none !important;
  -moz-user-select: none !important;
  -ms-user-select: none !important;
  user-select: none !important;
}

/* Ensure smooth canvas rendering */
.konvajs-content {
  -webkit-font-smoothing: antialiased !important;
  -moz-osx-font-smoothing: grayscale !important;
  transform: translateZ(0) !important;
  backface-visibility: hidden !important;
  perspective: 1000px !important;
}

/* Prevent any CSS conflicts with Konva */
.konvajs-content * {
  box-sizing: border-box !important;
  margin: 0 !important;
  padding: 0 !important;
}

/* ===== PRESENTATION EDITOR SPECIFIC STYLES ===== */
/* Clean styles for the presentation editor */
.presentation-editor {
