/* ===== DRAGGABLE LINE INDICATOR STYLES ===== */
/* Import the draggable line indicator styles */
@import './components/DraggableLineIndicator.css';

/* Draggable elements */
.draggable-block {
  cursor: grab;
  user-select: none;
  transition: transform 0.1s ease, box-shadow 0.1s ease;
}

.draggable-block:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.draggable-block:active {
  cursor: grabbing;
  transform: translateY(0);
}

.draggable-block.dragging {
  opacity: 0.5;
  transform: rotate(2deg);
  z-index: 1000;
}

/* Editor elements that can be dragged */
.lexical-editor [data-lexical-key] {
  cursor: grab;
  transition: background-color 0.2s ease;
}

.lexical-editor [data-lexical-key]:hover {
  background-color: rgba(255, 107, 53, 0.05);
}

.lexical-editor [data-lexical-key].dragging {
  opacity: 0.7;
  background-color: rgba(255, 107, 53, 0.1);
}

