/* ===== CLEAN LEXICAL EDITOR STYLES ===== */
/* Remove ALL conflicting styles and create clean, minimal editor styles */

/* Basic editor container */
.lexical-editor {
  position: relative;
  width: 100%;
  height: 100%;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* ContentEditable - Clean and minimal */
.lexical-editor [contenteditable="true"] {
  outline: none !important;
  border: none !important;
  background: transparent !important;
  font-family: inherit !important;
  font-size: 16px !important;
  line-height: 1.5 !important;
  caret-color: var(--cursor-color, #000000) !important;
  -webkit-caret-color: var(--cursor-color, #000000) !important;
  -moz-caret-color: var(--cursor-color, #000000) !important;
  
  /* Remove ALL transitions and animations */
  transition: none !important;
  animation: none !important;
  transform: none !important;
  will-change: auto !important;
  
  /* Ensure proper text selection */
  user-select: text !important;
  -webkit-user-select: text !important;
  -moz-user-select: text !important;
  -ms-user-select: text !important;
  
  /* Remove any margin/padding that could cause glitches */
  margin: 0 !important;
  padding: 0 !important;
  
  /* Ensure smooth typing */
  text-rendering: optimizeLegibility !important;
  -webkit-font-smoothing: antialiased !important;
  -moz-osx-font-smoothing: grayscale !important;
}

/* Remove ALL focus styles that could interfere */
.lexical-editor [contenteditable="true"]:focus {
  outline: none !important;
  border: none !important;
  box-shadow: none !important;
}

/* Remove ALL transitions from editor children */
.lexical-editor [contenteditable="true"] *,
.lexical-editor * {
  transition: none !important;
  animation: none !important;
  transform: none !important;
}

/* EXCEPTION: Allow image containers to have transforms and transitions for dragging */
.lexical-editor .image-container,
.lexical-editor .image-container * {
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1) !important;
  transform: inherit !important;
  animation: none !important;
  pointer-events: auto !important;
}

/* Allow image containers to be draggable */
.lexical-editor .image-container {
  position: relative !important;
  display: inline-block !important;
  cursor: grab !important;
  user-select: none !important;
  -webkit-user-select: none !important;
  -moz-user-select: none !important;
  -ms-user-select: none !important;
  pointer-events: auto !important;
  z-index: 1 !important;
}

/* Ensure images are draggable */
.lexical-editor .inserted-image {
  pointer-events: auto !important;
  cursor: grab !important;
  user-select: none !important;
  -webkit-user-select: none !important;
  -moz-user-select: none !important;
  -ms-user-select: none !important;
  -webkit-user-drag: none !important;
  -khtml-user-drag: none !important;
  -moz-user-drag: none !important;
  -o-user-drag: none !important;
  user-drag: none !important;
}

/* When dragging */
.lexical-editor .image-container.dragging {
  cursor: grabbing !important;
  z-index: 1000 !important;
}

/* Clean text nodes - allow color inheritance */
.lexical-editor [data-lexical-text="true"] {
  font-family: inherit !important;
  line-height: inherit !important;
  transition: none !important;
  animation: none !important;
}

/* Clean paragraph nodes */
.lexical-editor p {
  margin: 0 !important;
  padding: 0 !important;
  line-height: inherit !important;
  transition: none !important;
  animation: none !important;
}

/* Clean span nodes */
.lexical-editor span {
  font-family: inherit !important;
  line-height: inherit !important;
  transition: none !important;
  animation: none !important;
}

/* Clean div nodes */
.lexical-editor div {
  font-family: inherit !important;
  line-height: inherit !important;
  transition: none !important;
  animation: none !important;
}

/* Clean selection styles */
.lexical-editor::selection,
.lexical-editor *::selection {
  background-color: #b3d4fc !important;
}

/* Remove ALL conflicting data-lexical-editor styles */
[data-lexical-editor] {
  font-family: inherit !important;
  line-height: inherit !important;
  transition: none !important;
  animation: none !important;
}

