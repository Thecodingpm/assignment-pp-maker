/* ===== EDITOR ELEMENT POSITIONING FIXES ===== */
/* Ensure editor elements can be positioned freely without interference */
.presentation-editor .slide-canvas {
  position: relative !important;
  overflow: visible !important;
}

/* Remove the problematic global positioning that was breaking everything */
.presentation-editor .slide-canvas * {
  /* Remove the absolute positioning that was breaking element display */
  position: static !important;
  transform: none !important;
  transition: none !important;
  animation: none !important;
}

/* Allow elements to be positioned absolutely when they have the absolute class */
.presentation-editor .slide-canvas .absolute {
  position: absolute !important;
}

/* Ensure proper element display without interfering with positioning */
.presentation-editor .slide-canvas .image-element,
.presentation-editor .slide-canvas [data-type="image"] {
  display: block !important;
  max-width: 100% !important;
  height: auto !important;
}

.presentation-editor .slide-canvas .text-element,
.presentation-editor .slide-canvas [data-type="text"] {
  display: block !important;
  white-space: pre-wrap !important;
  word-wrap: break-word !important;
}

.presentation-editor .slide-canvas .shape-element,
.presentation-editor .slide-canvas [data-type="shape"] {
  display: block !important;
}

/* Remove any CSS that might interfere with element positioning */
.presentation-editor * {
  margin: 0 !important;
  padding: 0 !important;
  box-sizing: border-box !important;
}

/* ===== ADDITIONAL ELEMENT DISPLAY FIXES ===== */
/* Ensure all editor elements are visible and properly positioned */
.presentation-editor .slide-canvas .absolute {
  position: absolute !important;
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
}

/* Fix image display issues */
.presentation-editor .slide-canvas img {
  display: block !important;
  max-width: 100% !important;
  height: auto !important;
  object-fit: cover !important;
  visibility: visible !important;
  opacity: 1 !important;
}

/* Fix text element display */
.presentation-editor .slide-canvas .text-element {
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
  white-space: pre-wrap !important;
  word-wrap: break-word !important;
}

/* Fix shape element display */
.presentation-editor .slide-canvas .shape-element {
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
}

/* Ensure no elements are hidden by default */
.presentation-editor .slide-canvas * {
  visibility: visible !important;
  opacity: 1 !important;
}

/* ===== END EDITOR ELEMENT POSITIONING FIXES ===== */

